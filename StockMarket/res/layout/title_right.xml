<?xml version="1.0" encoding="utf-8"?>
<com.example.stockmarket.view.MySyncHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                         android:id="@+id/rightTitleHorscrollView"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         android:scrollbars="none">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <TextView
                android:id="@+id/tv_item1"
                style="@style/TextViewStyleRight"
                android:text="最新"
                />
        <TextView
                android:id="@+id/tv_item2"
                style="@style/TextViewStyleRight"
                android:text="跌涨"
                />
        <TextView
                android:id="@+id/tv_item3"
                style="@style/TextViewStyleRight"
                android:text="跌涨幅"
                />
        <TextView
                android:id="@+id/tv_item4"
                style="@style/TextViewStyleRight"
                android:text="开盘"
                />
        <TextView
                android:id="@+id/tv_item5"
                style="@style/TextViewStyleRight"
                android:text="最高"
                />
        <TextView
                android:id="@+id/tv_item6"
                style="@style/TextViewStyleRight"
                android:text="最低"
                />
        <TextView
                android:id="@+id/tv_item7"
                style="@style/TextViewStyleRight"
                android:text="昨收"
                />
    </LinearLayout>
</com.example.stockmarket.view.MySyncHorizontalScrollView>